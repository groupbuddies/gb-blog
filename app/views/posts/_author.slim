section.author
  .photo = image_tag author.photo_url, alt: author.full_name
  .author-info
      h2.author-title = "About #{author.full_name}"
      p.author-bio = author.bio
      aside.info.small
        ' Read more from
        a = link_to author.first_name, author_path(author.full_name.gsub(' ', '-'))
        - if author.has_twitter?
          '  or follow him on
          a = link_to 'Twitter', author.twitter_url
