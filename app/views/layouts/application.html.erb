<!DOCTYPE html>
<html>
<head>
  <title>GB Blog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>

  <%= javascript_include_tag "application" %>
  <script type="text/javascript" src="http://use.typekit.net/vye0ajp.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |type, value| %>
  <div class="alert-box #{type.to_s}">
    <%= value %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
